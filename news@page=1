<script>$(document).on("beforeSubmit", "#callback-form", function () {
    var form = $(this); 
    $.ajax({
      url: form.attr("action"),
      type: "post",
      data: form.serialize(),
      success: function(data) {
        if(data) {
            $("#callback .head").html("Спасибо! менеджер скоро свяжется с Вами");
            $("#callback form").remove(); 
        }
      }
    });
    return false;
});
$(document).on("beforeSubmit", "#callback-form-quick_price", function () {
    var form = this;
    $(".quick_price #callback-form-quick_price .row input[type=submit]").attr("disabled", true);
    var progressBar = $('#progressbar');
    $.ajax({
        url: $(form).attr("action"),
        type: "post",
        data: new FormData( form ),
        processData: false,
        contentType: false,
        xhr: function(){
            $("#callback-form-quick_price").hide();
            $(".progress-bar").show();
            var xhr = $.ajaxSettings.xhr();  // получаем объект XMLHttpRequest
            xhr.upload.addEventListener('progress', function(evt){ // добавляем обработчик события progress (onprogress)
                if(evt.lengthComputable) { // если известно количество байт
                    // высчитываем процент загруженного
                    var percentComplete = Math.ceil(evt.loaded / evt.total * 100);
                    // устанавливаем значение в атрибут value тега progress
                    // и это же значение альтернативным текстом для браузеров, не поддерживающих progress
                    progressBar.val(percentComplete).text('Загружено ' + percentComplete + '%');
                }
            }, false);
            return xhr;
        },
        success: function(data) {
            if(data == true) {
                $(".phone-call, .quick_price").fadeOut(2000, function() {
                    $(".quick_price .desc").html("В ближайшее время мы свяжемся с вами для уточнения деталей по заявке.");
                    $(".quick_price").css({
                        "margin": "167px auto"
                    });
                    $(".quick_price").fadeIn();
                    $("#callback-form-quick_price, .phone-call").remove();
                });
            }
        }
    });
    return false;
});</script>
